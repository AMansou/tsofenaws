
child=$!
echo hi

if [[ $# -ne 1 ]]
then
	echo 'Enter argument (run/stop/status)'
	exit
fi
if [[ $1 = 'run' ]]
then
	lmao=$(ps | grep "$(cat runningproc)" )
	if [ -z "$lmao" ]
	then
		sleep 20 &
		echo $! > runningproc
		echo started on PID on $(cat runningproc)
		exit
	else
		echo proc is already running
	fi
elif [[ $1 = 'stop' ]]
then
	lol=$(cat runningproc)
	lmao=$(ps | grep "$(cat runningproc)" )
	if [ -n "$lmao" ]
	then
		echo  stoppig the process $lol ....
		kill -9 $lol
	else
		echo The process is not running m80
	fi
	#kill -9 $lol
elif [[ $1 = 'status' ]]
then
	lmao=$(ps | grep "$(cat runningproc)" )
	if [ -n "$lmao" ]
	then
		echo proc is running on $(cat runningproc)
	else
		echo The process is not running m80
	fi
else
	echo "not a valid command :("
	exit
fi
